{
    // Detailed explanation of the options: http://jshint.com/docs/options/

    // Enforcing options
    "curly"       : true,     // Require {} for every new block or scope.
    "undef"       : true,     // Prohibit use of undeclared variables.

    // Relaxing options
    // ...

    // Environments
    "devel"       : true,     // Defines globals for simple debugging (e.g. console, alert).
    "jasmine"     : true,     // Defines globals for Jasmine.
    "node"        : true,     // Defines globals for Node (e.g. module).


    // Global variables (false = the variable is read-only).
    "globals": {
      "angular"   : false,
      "browser"   : false,
      "Blockly"   : false
    }
}
